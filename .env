# Environment variables for Bot application
MINDX_WORKSPACE=/Users/ray/projects/mindx/.dev
MINDX_PATH=/Users/ray/projects/mindx/mindx

# Logging
LOG_LEVEL=info

# Development mode
DEV_MODE=true

# Server Configuration (MINDX_ prefix)
MINDX_SERVER_VERSION=0.0.1
MINDX_SERVER_HOST=localhost
MINDX_SERVER_PORT=911
MINDX_SERVER_WS_PORT=1314
MINDX_SERVER_OLLAMA_URL=http://localhost:11434/v1

# Vector Store
MINDX_SERVER_VECTOR_STORE_TYPE=badger
MINDX_SERVER_VECTOR_STORE_DATA_PATH=data/vectors

# Token Budget
MINDX_SERVER_TOKEN_BUDGET_RESERVED_OUTPUT_TOKENS=8192
MINDX_SERVER_TOKEN_BUDGET_MIN_HISTORY_ROUNDS=5
MINDX_SERVER_TOKEN_BUDGET_AVG_TOKENS_PER_ROUND=200

# Subconscious Models
MINDX_SERVER_SUBCONSCIOUS_DEFAULT=qwen3:0.6b
MINDX_SERVER_SUBCONSCIOUS_LEFT=qwen3:0.6b
MINDX_SERVER_SUBCONSCIOUS_RIGHT=qwen3:0.6b

# Consciousness Models
MINDX_SERVER_CONSCIOUSNESS_DEFAULT=qwen3:1.7b
MINDX_SERVER_CONSCIOUSNESS_LEFT=qwen3:0.6b
MINDX_SERVER_CONSCIOUSNESS_RIGHT=qwen3:1.7b

# Other Models
MINDX_SERVER_MEMORY_MODEL=qwen3:0.6b
MINDX_SERVER_INDEX_MODEL=qwen3:0.6b
MINDX_SERVER_EMBEDDING_MODEL=qllama/bge-small-zh-v1.5:latest
MINDX_SERVER_DEFAULT_MODEL=qwen3:0.6b

# Memory
MINDX_SERVER_MEMORY_ENABLED=true
MINDX_SERVER_MEMORY_SCHEDULE="0 0 12 * * *"
